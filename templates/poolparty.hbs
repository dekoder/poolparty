{{#each block.data.details.concepts as |concept|}}
    <div class="definition">
        <p class="padded">
            <a href="{{concept.uri}}">{{concept.prefLabel}}<i class="btb bt-external-link"></i></a>
            {{#if concept.mapsToDataElement }}
                <strong>mapsToDataElement</strong>
                <a href="{{concept.mapsToDataElement.uri}}">{{concept.mapsToDataElement.prefLabel}}<i class="btb bt-external-link"></i></a>
            {{/if}}
        </p>
        {{concept.definition}}
    </div>
{{/each}}


